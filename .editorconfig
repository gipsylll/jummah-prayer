# EditorConfig для единообразного форматирования

root = true

# Все файлы
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ файлы
[*.{cpp,h,hpp}]
indent_style = space
indent_size = 4
max_line_length = 100

# QML файлы
[*.qml]
indent_style = space
indent_size = 4

# CMake файлы
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# JSON, YAML
[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

